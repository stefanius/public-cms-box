<div class="opc-block-progress<?php if ($block->isStepComplete('billing')): ?> active<?php endif; ?><?php if ($block->isStepComplete('payment')): ?> order-review-step<?php endif; ?>">
    <div class="title">
        <strong><?php echo __('Your Checkout Progress') ?></strong>
    </div>
    <div class="content">
        <dl class="items">
        <?php if ($block->getCheckout()->getStepData('billing', 'is_show')): ?>
        <?php if ($block->isStepComplete('billing')): ?>
            <dt class="item-title complete">
                <span id="billing-address-label"><?php echo __('Billing Address') ?></span>
                <a href="#billing"
                   data-goto-section="billing"
                   class="action billing"
                   aria-describedby="billing-address-label">
                    <?php echo __('Change') ?>
                </a>
            </dt>
            <dd class="item-content complete">
                <address><?php echo $block->getBilling()->format('html') ?></address>
            </dd>
        <?php else: ?>
            <dt class="item-title">
                <?php echo __('Billing Address') ?>
            </dt>
        <?php endif; ?>
        <?php endif; ?>

        <?php if ($block->getCheckout()->getStepData('shipping', 'is_show')): ?>
        <?php if ($block->isStepComplete('shipping')): ?>
            <dt class="item-title complete">
                <span id="shipping-address-label"><?php echo __('Shipping Address') ?></span>
                <a href="#payment"
                   data-goto-section="shipping"
                   class="action shipping address"
                   aria-describedby="shipping-address-label">
                    <?php echo __('Change') ?>
                </a>
            </dt>
            <dd class="item-content complete">
                <address><?php echo $block->getShipping()->format('html') ?></address>
            </dd>
        <?php else: ?>
            <dt class="item-title">
                <span><?php echo __('Shipping Address') ?></span>
            </dt>
        <?php endif; ?>
        <?php endif; ?>

        <?php if ($block->getCheckout()->getStepData('shipping_method', 'is_show')): ?>
        <?php if ($block->isStepComplete('shipping_method')): ?>
            <dt class="item-title complete">
                <span id="shipping-method-label"><?php echo __('Shipping Method') ?></span>
                <a href="#shipping_method"
                   data-goto-section="shipping_method"
                   class="action shipping method"
                   aria-describedby="shipping-method-label">
                    <?php echo __('Change') ?>
                </a>
            </dt>
            <dd class="item-content complete">
                <?php if ($block->getShippingMethod()): ?>
                    <?php echo $block->escapeHtml($block->getShippingDescription()) ?>

                    <?php echo $block->getShippingPriceHtml($block->getShippingRate()) ?>

                <?php else: ?>
                    <?php echo __('Shipping method has not been selected yet') ?>
                <?php endif; ?>
            </dd>
        <?php else: ?>
            <dt class="item-title">
                <span><?php echo __('Shipping Method') ?></span>
            </dt>
        <?php endif; ?>
        <?php endif; ?>

        <?php if ($block->getCheckout()->getStepData('payment', 'is_show')): ?>
        <?php if ($block->isStepComplete('payment')): ?>
            <dt class="item-title complete">
                <span id="payment-method-label"><?php echo __('Payment Method') ?></span>
                <a href="#payment"
                   data-goto-section="payment"
                   class="action payment method"
                   aria-describedby="payment-method-label">
                    <?php echo __('Change') ?>
                </a>
            </dt>
            <dd class="item-content complete">
                <?php echo $block->getPaymentHtml() ?>
            </dd>
        <?php else: ?>
            <dt class="item-title">
                <span><?php echo __('Payment Method') ?></span>
            </dt>
        <?php endif; ?>
        <?php endif; ?>
        </dl>
    </div>
</div>
