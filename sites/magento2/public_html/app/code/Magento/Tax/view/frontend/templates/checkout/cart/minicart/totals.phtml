<div class="amount price-container">
    <?php if ($block->getDisplaySubtotalExclTax()): ?>
        <span class="price-wrapper">
            <?php echo $this->helper('Magento\Checkout\Helper\Data')->formatPrice($block->getSubtotalExclTax()); ?>
        </span>
    <?php elseif ($block->getDisplaySubtotalInclTax()): ?>
        <span class="price-wrapper">
            <?php echo $this->helper('Magento\Checkout\Helper\Data')->formatPrice($block->getSubtotalInclTax()); ?>
        </span>
    <?php else: ?>
        <span class="price-wrapper price-including-tax" data-label="<?php echo __('Incl. Tax'); ?>">
            <?php echo $this->helper('Magento\Checkout\Helper\Data')->formatPrice($block->getSubtotalInclTax()) ?>
        </span>
        <span class="price-wrapper price-excluding-tax" data-label="<?php echo __('Excl. Tax'); ?>">
            <?php echo $this->helper('Magento\Checkout\Helper\Data')->formatPrice($block->getSubtotalExclTax()); ?>
        </span>
    <?php endif; ?>
</div>
